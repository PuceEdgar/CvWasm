<h3>Hard Skills</h3>

<table>
    <tbody>
        <tr>            
            <th>@HardSkillsDetails.Programming.Key</th>
            <td>
                @foreach (string programming in HardSkillsDetails.Programming.Value)
                {
                    <p>@programming</p>
                }
            </td>
        </tr>
        <TableHeaderAndDataRow TableHeader="@HardSkillsDetails.Tools.Key" TableData="@HardSkillsDetails.Tools.Value" />
        @* <tr>
            <th>@HardSkillsDetails.Tools.Key</th>
            <td>@HardSkillsDetails.Tools.Value</td>
        </tr> *@
        <tr>
            <th>@HardSkillsDetails.Other.Key</th>
            <td>
                @foreach (string other in HardSkillsDetails.Other.Value)
                {
                    <p>@other</p>
                }
            </td>
        </tr>
        <TableHeaderAndDataRow TableHeader="@HardSkillsDetails.WayOfWorking.Key" TableData="@HardSkillsDetails.WayOfWorking.Value" />
        @* <tr>
            <th>@HardSkillsDetails.WayOfWorking.Key</th>
            <td>@HardSkillsDetails.WayOfWorking.Value</td>
        </tr> *@
        <tr>
            <th>@HardSkillsDetails.Languages.Key</th>
            <td>
                @foreach (string language in HardSkillsDetails.Languages.Value)
                {
                    <p>@language</p>
                }
            </td>
        </tr>

    </tbody>
</table>