<h3>Hard Skills</h3>

<table>
    <tbody>
        <tr>            
            <th>Programming</th>
            <td>
                @foreach (string programming in HardSkillsDetails.Programming)
                {
                    <p>@programming</p>
                }
            </td>
        </tr>
        <tr>
            <th>Tools</th>
            <td>@HardSkillsDetails.Tools</td>
        </tr>
        <tr>
            <th>Other</th>
            <td>
                @foreach (string other in HardSkillsDetails.Other)
                {
                    <p>@other</p>
                }
            </td>
        </tr>
        <tr>
            <th>Way Of Working</th>
            <td>@HardSkillsDetails.WayOfWorking</td>
        </tr>
        <tr>
            <th>Languages</th>
            <td>
                @foreach (string language in HardSkillsDetails.Languages)
                {
                    <p>@language</p>
                }
            </td>
        </tr>

    </tbody>
</table>
